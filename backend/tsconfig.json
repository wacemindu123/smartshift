{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@/*": ["*"],
      "@/shared/*": ["shared/*"]
    }
  },
  "include": ["../backend/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "../app", "../components", "../hooks", "../lib", "../.next"]
}
