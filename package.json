{
  "name": "shift-smart-lite",
  "version": "1.0.0",
  "description": "Lightweight labor management web app built with Next.js, Clerk.dev, Express, and PostgreSQL",
  "scripts": {
    "dev": "next dev",
    "dev:frontend": "next dev",
    "dev:backend": "ts-node-dev --respawn --transpile-only backend/server.ts",
    "build": "next build",
    "build:frontend": "next build",
    "build:backend": "tsc -p backend/tsconfig.json",
    "start": "next start",
    "start:backend": "node backend/dist/backend/server.js",
    "postinstall": "prisma generate",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:backend": "jest --testPathPattern=backend",
    "test:frontend": "jest --testPathPattern=__tests__",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed:demo": "npx tsx scripts/seed-demo-data.ts",
    "remove:demo": "npx tsx scripts/remove-demo-data.ts",
    "health:check": "npx tsx scripts/check-production-health.ts"
  },
  "dependencies": {
    "@clerk/express": "^1.0.0",
    "@clerk/nextjs": "^5.0.0",
    "@prisma/client": "^5.9.0",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "lucide-react": "^0.323.0",
    "next": "^14.1.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^10.0.4",
    "twilio": "^5.10.3",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "postcss": "^8.4.33",
    "prisma": "^5.9.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
